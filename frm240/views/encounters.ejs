<!DOCTYPE html>
<html lang = "en">
	<head>
		<meta charset = "utf-8" />
		<title>NDOW 240</title>
		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
	</head>

	<body>
		<nav class="navbar navbar-default">
	    <div class="container-fluid">
	        <div class="navbar-header">
	            <a class="navbar-brand" href="/">NDOW Forms</a>
	        </div>
	        <div class="collapse navbar-collapse">
	            <ul class="nav navbar-nav navbar-right">
	                <li><a href="/">login</a></li>
	                <li><a href="/">Sign Up</a></li>
	            </ul>
	        </div>
	    </div>
		</nav>

    <header class="jumbotron">
         <div class="container">
             <h1>NDOW Wildlife Encounters!</h1>
             <p>View wildlife encounter made by NDOW biologists.</p>
             <p>
                <a class="btn btn-primary btn-large" href="/encounters/new">Add New Encounter</a>
             </p>
         </div>
     </header>

    <div class("row text-center")>
      <% encounters.forEach(function(encounter){ %>
            <div class="col-xs-10 col-xs-offset-1" style="border: black solid 1px">
              <h2><%= encounter.species %> - <%= encounter.date %></h2>
              <p><%= encounter.location %></p>
              <h4>Numbers</h4>
              <ul>
                <li><%= encounter.female %></li>
                <li><%= encounter.male %></li>
                <li><%= encounter.young %></li>
              </ul>

            </div>
      <% }) %>
    </div>

  </body>
</html>
