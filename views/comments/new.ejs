
<div class="container">
    <div class="row">
        <h2>Add New Comment to <%= observation._id %></h2>
        <div class="">
            <form action="/observations/<%= observation._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment body">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
